@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.SocialWall>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "Master.cshtml";
    var tiles = Model.Tiles;

}
@Html.CachedPartial("bannerItem", Model, QMUCloud.Core.QMUConstants.PartialCachedSeconds, true)

<main role="main" class="main-content social-wall" style="display:flow-root;" aria-label="main body content">
    <div class="content">
        <div class="container">
            @Html.CachedPartial("breadcrumb", Model, QMUCloud.Core.QMUConstants.PartialCachedSeconds, true)
            @Model.Introduction
            <div class="mob-filter">
                <div class="show-filter">Show Filter...</div>
                <div class="active-filter">All</div>
            </div>
            <ul class="social-filter">
                <li id="twitter"><span class="icon-twitter" role="button" aria-label="Filter by Twitter" tabindex="0">Twitter</span></li>

                <li id="facebook"><span class="icon-facebook-official" role="button" aria-label="Filter by Facebook" tabindex="0">Facebook</span></li>

                <li id="instagram"><span class="icon-instagram" role="button" aria-label="Filter by Instagram" tabindex="0">Instagram</span></li>

                <li id="youtube"><span class="icon-youtube-play" role="button" aria-label="Filter by Youtube" tabindex="0">Youtube</span></li>

                <li id="articles"><span class="icon-articles" role="button" aria-label="Filter by Articles" tabindex="0">Articles</span></li>
            </ul>
            <!-- ANY -->
            <div class="sw-results" @*style="height:1000px;"*@>
                @foreach (var tile in tiles)
                {
                    var cssClass = string.Empty;
                    @*<div data-id="all" class="social-col-wrap active">
                        <div class="half">*@
                    if (@tile.Type == "Twitter")
                    {
                        cssClass = "twitter icon-twitter";
                    }
                    else if (@tile.Type == "Facebook")
                    {
                        cssClass = "facebook icon-facebook-official";
                    }
                    else if (@tile.Type == "Instagram")
                    {
                        cssClass = "instagram icon-instagram";
                    }
                    else if (@tile.Type == "YouTube")
                    {
                        cssClass = "instagram icon-instagram";
                    }
                    else if (@tile.Type == "Articles")
                    {
                        cssClass = "articles icon-articles";
                    }

                    <div class="column">
                        <a href="@tile.Link.Url" target="" class="social-item @cssClass">
                            <!-- if youtube here -->
                            <div class="image">
                                <img src="@tile.Image.Url()" alt="@tile.Image.Value("altText")" />
                            </div>
                            <div class="quote">
                                @tile.Quote
                            </div>

                            <div class="text-block">
                                @tile.Summary
                                <!-- date stuffs in here-->
                                <div class="view-post">View post</div>
                            </div>
                        </a>
                    </div>

                }

            </div>

        </div>
    </div>
</main>

<style>
    .column {
        float: left;
        width: 25%;
        /*height: 400px;*/ /* Should be removed. Only for demonstration */
        padding: 0 9px;
