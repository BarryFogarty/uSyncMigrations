@using Umbraco.Web.PublishedModels
@inherits Umbraco.Web.Mvc.UmbracoViewPage<CourseListing>

<div class="left-band">
    <div class="container">
        <div class="row clearfix">
            <div class="col-md-12 column left-text">
                <h2><strong>@Model.Title</strong></h2>

                @if(Model.Links.Count() > 0)
                {
                    <div class="d-flex flex-wrap">
                        @foreach (var link in Model.Links)
                        {
                            <h3 class="mb-3 me-3">
                                <a class="blue-btn" href="@link.Url" target="@link.Target">@link.Name</a>
                            </h3>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
