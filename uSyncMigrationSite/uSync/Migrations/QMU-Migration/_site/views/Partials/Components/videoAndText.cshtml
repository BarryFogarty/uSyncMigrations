@using Umbraco.Web.PublishedModels
@using QMUCloud.Core.Helpers
@inherits Umbraco.Web.Mvc.UmbracoViewPage<VideoAndText>


<section class="qmu_cmp_videotext component-spacing" id="@Model.AnchorCode">
    <div class="container full-width full-width-95">
        @if (!string.IsNullOrWhiteSpace(Model.Title))
        {
            <h2 class="text-center">@Model.Title</h2>
        }
        <div class="row">
            <div class="col-xl-6">
                <div class="mceNonEditable embeditem mb-4 mb-xl-0">
                    @Html.YoutubeLazyLoad(Model.VideoUrl, Model.VideoTitle)
                </div>
            </div>
            <div class="col-xl-6">
                <div class="d-flex flex-column justify-content-center h-100">
                    @Html.Raw(Model.Text)

                    @if (Model.ButtonLink != null)
                    {
                        <div>
                            <a href="@Model.ButtonLink.Url" target="@Model.ButtonLink.Target" class="blue-btn">@Model.ButtonLink.Name</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</section>

