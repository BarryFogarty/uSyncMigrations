@inherits Umbraco.Web.Mvc.UmbracoViewPage<EventFromLibrary>

@if (Model.Event != null && Model.Event is EventDetails)
{
    var eventDetails = (EventDetails) Model.Event;
    string ImageUrl = string.Empty;
    string ImageAlt = string.Empty;

    if (eventDetails.Image != null)
    {
        ImageUrl = eventDetails.Image.Url();
        ImageAlt = eventDetails.Image.Value<string>("altText");
    }
    else
    {
        ImageUrl = "~/Images/ad-spot-temp.png";
    }

    <h2>@eventDetails.Title</h2>

    <div class="event-detail-box">
        <span style="background-image: url(@ImageUrl)" class="bg-no-cover-img" role="img" aria-label="@ImageAlt"> </span>

        <div class="inner-white">
            <strong>@eventDetails.SubTitle</strong>
            @Html.Raw(eventDetails.FreeText)
            @if (eventDetails.Link != null)
            {
                <a href="@eventDetails.Link.Url" target="@eventDetails.Link.Target" class="blue-btn">@eventDetails.Link.Name</a>
            }

        </div>
    </div>
}