dth=\"85\">\n<p>1</p>\n</td>\n</tr>\n<tr>\n<td width=\"57\">\n<p>B3210</p>\n</td>\n<td width=\"247\">\n<p>Innovation, entrepreneurship and start-ups</p>\n</td>\n<td width=\"84\">\n<p>20</p>\n</td>\n<td width=\"85\">\n<p>1</p>\n</td>\n</tr>\n<tr>\n<td width=\"57\">\n<p>B3171</p>\n</td>\n<td width=\"247\">\n<p>Business Research Methods</p>\n</td>\n<td width=\"84\">\n<p>20</p>\n</td>\n<td width=\"85\">\n<p>2</p>\n</td>\n</tr>\n<tr>\n<td width=\"57\">\n<p>B3XXX</p>\n</td>\n<td width=\"247\">\n<p>International Destination Management</p>\n</td>\n<td width=\"84\">\n<p>20</p>\n</td>\n<td width=\"85\">\n<p>2</p>\n</td>\n</tr>\n<tr>\n<td width=\"57\">\n<p>B3XXX</p>\n</td>\n<td width=\"247\">\n<p>Digital Management of Tourism and Hospitality</p>\n</td>\n<td width=\"84\">\n<p>20</p>\n</td>\n<td width=\"85\">\n<p>2</p>\n</td>\n</tr>\n</tbody>\n</table>\n<p><strong> </strong></p>\n<p><strong>Level Four</strong></p>\n<table border=\"0\" width=\"476\">\n<tbody>\n<tr>\n<td width=\"53\">\n<p>Code</p>\n</td>\n<td width=\"253\">\n<p>Title</p>\n</td>\n<td width=\"85\">\n<p>Credits</p>\n</td>\n<td width=\"85\">\n<p>Semester</p>\n</td>\n</tr>\n<tr>\n<td width=\"53\">\n<p>B4135</p>\n</td>\n<td width=\"253\">\n<p>Management Insight and Consultancy</p>\n</td>\n<td width=\"85\">\n<p>20</p>\n</td>\n<td width=\"85\">\n<p>1</p>\n</td>\n</tr>\n<tr>\n<td width=\"53\">\n<p>B4XXX</p>\n</td>\n<td width=\"253\">\n<p>Sustainability and CSR in the Hospitality Industry</p>\n</td>\n<td width=\"85\">\n<p>20</p>\n</td>\n<td width=\"85\">\n<p>1</p>\n</td>\n</tr>\n<tr>\n<td width=\"53\">\n<p>B4XXX</p>\n</td>\n<td width=\"253\">\n<p>Contemporary Issues (challenges) in Hospitality and Tourism</p>\n</td>\n<td width=\"85\">\n<p>20</p>\n</td>\n<td width=\"85\">\n<p>2</p>\n</td>\n</tr>\n<tr>\n<td width=\"53\">\n<p>B4136</p>\n</td>\n<td width=\"253\">\n<p>Honours Dissertation</p>\n</td>\n<td width=\"85\">\n<p>60</p>\n</td>\n<td width=\"85\">\n<p>Y</p>\n</td>\n</tr>\n</tbody>\n</table>\n<p> </p>"
